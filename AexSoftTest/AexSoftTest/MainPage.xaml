<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AexSoftTest.Views"
             x:Class="AexSoftTest.MainPage">
    
    <FlyoutItem Title="Коллекция" FlyoutDisplayOptions="AsSingleItem">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:BookPage}" />
